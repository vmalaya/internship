<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2019110102_create_users_messages_table" author="Valentyna Mala">
        <!--        <createSequence startValue="1" incrementBy="1" ordered="true" sequenceName="messages_sequence"/>-->

        <createTable tableName="users_messages">
            <column name="id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="message_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addPrimaryKey columnNames="id" constraintName="users_messages_pkey" tableName="users_messages"/>

        <addForeignKeyConstraint baseTableName="users_messages" baseColumnNames="user_id" constraintName="users_messages_user_id_users_fkey" referencedTableName="users"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="users_messages" baseColumnNames="message_id" constraintName="users_messages_message_id_users_fkey" referencedTableName="messages"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>
